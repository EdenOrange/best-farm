{
  "parser": "babel-eslint",
  "parserOptions": {
    "sourceType": "module",
    "allowImportExportEverywhere": false,
    "codeFrame": false
  },
  "extends": ["airbnb", "prettier"],
  "env": {
    "browser": true,
    "jest": true
  },
  "rules": {
    "no-console": "off",
    "no-underscore-dangle": ["error", {
      "allow": ["_id"]
    }],
    "react/jsx-filename-extension": ["off"],
    "react/prop-types": ["warn"]
  },
  "settings": {
    "import/resolver": {
      "node": {
        "paths": ["src"]
      }
    }
  }
}